    function removeProOffer(proId,offer,price){
    alert(proId)
    alert(offer)
    alert(price)
    if(confirm('Are you sure to want remove the offer')){

    
    $.ajax({
        url: '/admin/removeProOffer',
        data:{
            id: proId,
            off:offer,
            pri:price
           
        },
        method:'post',
        success: (response) => {
            if(response.removeProOffer){
                alert("offer removed")
                location.reload()
            }
        }
    })
}
}
</script>