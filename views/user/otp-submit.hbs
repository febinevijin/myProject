<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
                  <form action="/varify-otp" method="POST">
            <div class="mb-md-5 mt-md-4 pb-5">
                  
              <h2 class="fw-bold mb-2 text-uppercase">OTP Login</h2>
             
 {{#if err}}
                <p class="error" style="color: red;">{{err}}</p>
            {{/if}}
              <div class="form-outline form-white mb-4">
                  <label class="form-label" for="typeEmailX">Enter the OTP</label>
                <input type="text" id="typeEmailX" name="otp" class="form-control form-control-lg" />
                
              </div>

              

             

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Submit</button>

              

            </div>

            <div>
              <p class="mb-0">Don't have an account? <a href="/signup" class="text-white-50 fw-bold">Sign Up</a></p>
            </div>
                </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>