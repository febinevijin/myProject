
   <section>
       <div class="container mt-5">
       <div class="row">

         {{#each product}}
           <div class="col-md-3">
               <div class="card" style="width: 15rem; height:25rem;">
  <img src="/images/{{this._id}}.jpeg" class="card-img-top ps-5 pt-3 ms-4" alt="..." style="height: 10rem; width:8rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
    <p class="card-text">{{this.price}}</p>
    <p class="card-text">{{this.ram}}</p>
    <a href="#" class="btn btn-primary">Add to cart</a>
  </div>
</div>
           </div>
           {{/each}}
       </div>
       </div>
   </section>